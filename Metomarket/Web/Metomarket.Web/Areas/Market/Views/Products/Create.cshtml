@model Metomarket.Web.ViewModels.Products.ProductCreateInputModel

@{
    ViewData["Title"] = "Create Product";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<section class="mt-4">
    <form asp-action="Create" class="form mx-auto mw-40r">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <label class="input-wrapper">
                <input asp-for="Name" placeholder="Product name . . ." />
            </label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <label class="input-wrapper">
                <input asp-for="Price" />
            </label>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="text-center">
            <a class="my-2" id="suggest-price">Suggest price</a>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl"></label>
            <label class="input-wrapper">
                <input asp-for="ImageUrl" placeholder="Image URL . . ." />
            </label>
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="InStock"></label>
            <label class="input-wrapper">
                <input asp-for="InStock" min="0" />
            </label>
            <span asp-validation-for="InStock" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TypeId"></label>
            <select asp-for="TypeId">
                @*<vc:ProductTypeSelectOptions></vc:ProductTypeSelectOptions>*@
                @await Component.InvokeAsync("ProductTypeSelectOptions")
            </select>
        </div>

        <div class="text-center">
            <input type="submit" value="Create" />
        </div>
    </form>
</section>

@section Scripts {
    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/products-create.js"></script>
}