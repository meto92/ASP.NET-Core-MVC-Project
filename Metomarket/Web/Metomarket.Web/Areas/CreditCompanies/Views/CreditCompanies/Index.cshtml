@model Metomarket.Web.ViewModels.CreditCompanies.CreditCompaniesListIndexViewModel

@{
    ViewData["Title"] = "Credit Companies";
}

<h1 class="text-center">@this.ViewData["Title"]</h1>

<section class="credit-companies-index container-fluid">
    <table class="table table-dark table-striped table-hover col-md-8 rounded mx-auto">
        <thead>
            <tr>
                <th>Company Name</th>
                <th>Contracts Count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var creditCompany in Model.CreditCompanies)
            {
                <tr>
                    <td>@creditCompany.Name</td>
                    <td>@creditCompany.ContractsCount</td>
                </tr>
            }

            @if (Model.CreditCompanies.Count() == 0)
            {
                <tr>
                    <td colspan="2" class="text-center">
                        <h4>There are no credit companies in database</h4>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="w-100 text-center">
        <a asp-area="CreditCompanies" asp-controller="CreditCompanies" asp-action="Add" class="btn btn-primary">Add Credit Company</a>
    </div>
</section>