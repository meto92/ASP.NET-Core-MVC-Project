@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4 class="text-center text-md-left">@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<section class="mw-30r mx-auto mx-md-0">
    <form id="change-password-form" method="post" class="form">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.OldPassword"></label>
            <label class="input-wrapper with-icon">
                <input asp-for="Input.OldPassword" />
                <i class="fas fa-lock"></i>
            </label>
            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.NewPassword"></label>
            <label class="input-wrapper with-icon">
                <input asp-for="Input.NewPassword" />
                <i class="fas fa-lock"></i>
            </label>
            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <label class="input-wrapper with-icon">
                <input asp-for="Input.ConfirmPassword" />
                <i class="fas fa-lock"></i>
            </label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Update password</button>
        </div>
    </form>
</section>